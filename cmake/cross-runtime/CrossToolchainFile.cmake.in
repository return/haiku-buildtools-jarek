IF(CMAKE_VERSION VERSION_LESS 3.6)
	INCLUDE(CMakeForceCompiler)

	# this one is important
	SET(CMAKE_SYSTEM_NAME Haiku)
	#this one not so much
	SET(CMAKE_SYSTEM_VERSION 1)

	CMAKE_FORCE_C_COMPILER(@__CROSS_COMPILE__@gcc GNU)
	CMAKE_FORCE_CXX_COMPILER(@__CROSS_COMPILE__@g++ GNU)
ELSE()
	# this one is important
	SET(CMAKE_SYSTEM_NAME Linux)
	#this one not so much
	SET(CMAKE_SYSTEM_VERSION 1)
	
	SET(CMAKE_C_COMPILER   "@__CROSS_COMPILE__@gcc" CACHE FILEPATH "" FORCE)
	SET(CMAKE_CXX_COMPILER "@__CROSS_COMPILE__@g++" CACHE FILEPATH "" FORCE)
	SET(CMAKE_TRY_COMPILE_TARGET_TYPE	STATIC_LIBRARY CACHE STRING "" FORCE)
ENDIF()

SET(CMAKE_LD "@__CROSS_COMPILE__@ld" CACHE FILEPATH "" FORCE)
SET(CMAKE_AR "@__CROSS_COMPILE__@ar" CACHE FILEPATH "" FORCE)
SET(CMAKE_NM "@__CROSS_COMPILE__@nm" CACHE FILEPATH "" FORCE)
SET(CMAKE_OBJCOPY "@__CROSS_COMPILE__@objcopy" CACHE FILEPATH "" FORCE)
SET(CMAKE_OBJDUMP "@__CROSS_COMPILE__@objdump" CACHE FILEPATH "" FORCE)
SET(CMAKE_RANLIB "@__CROSS_COMPILE__@ranlib" CACHE FILEPATH "" FORCE)
SET(CMAKE_STRIP "@__CROSS_COMPILE__@strip" CACHE FILEPATH "" FORCE)
SET(__CMAKE_C_LINKER "@__CROSS_COMPILE__@gcc" CACHE FILEPATH "" FORCE)
SET(__CMAKE_CXX_LINKER "@__CROSS_COMPILE__@g++" CACHE FILEPATH "" FORCE)
